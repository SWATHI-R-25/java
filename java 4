10. Alternate Index Product
import java.util.*;

public class Solution {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int size = sc.nextInt();
        int a[] = new int[size];

        for (int i = 0; i < size; i++) {
            a[i] = sc.nextInt();
        }

        int evenProduct = 1;
        int oddProduct = 1;

        for (int i = 0; i < size; i++) {
            if (i % 2 == 0) {
                evenProduct = evenProduct * a[i];
            } else {
                oddProduct = oddProduct * a[i];
            }
        }
       System.out.println(evenProduct);
        System.out.println(oddProduct);
    }
}
